{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Dev Server (Auto-start)",
			"type": "shell",
			"command": "pnpm",
			"args": [
				"dev"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": ["$tsc"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Start Development Server",
			"type": "shell",
			"command": "pnpm",
			"args": [
				"dev"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": ["$tsc"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "Build for Production",
			"type": "shell",
			"command": "pnpm",
			"args": [
				"build"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$tsc"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "Start Production Server",
			"type": "shell",
			"command": "pnpm",
			"args": [
				"start"
			],
			"group": "build",
			"isBackground": true,
			"dependsOn": "Build for Production",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "Build and Start Production",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Build for Production",
				"Start Production Server"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "pnpm",
			"args": [
				"install"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "Lint Code",
			"type": "shell",
			"command": "pnpm",
			"args": [
				"lint"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "Type Check",
			"type": "shell",
			"command": "pnpm",
			"args": [
				"type-check"
			],
			"group": "test",
			"problemMatcher": ["$tsc"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		}
	]
}